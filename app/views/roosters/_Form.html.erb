<%= simple_form_for @rooster do |f| %>

    <%= f.input :real_name , class: 'form-control' %>
    <%= f.input :nick_name , class: 'form-control'  %>
    <%= f.input :role , class: 'form-control' %>
    <%= f.input :rank , class: 'form-control' %>
    <%= f.input :email , class: 'form-control' %>
    <%= f.button :submit , class: 'btn btn-primary' %>

<% end %>